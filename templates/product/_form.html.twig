{{ form_start(form, {'attr': {'class': 'item-form'}}) }}

<div class="form-group">
    {{ form_label(form.title, 'Nom*') }}
    {{ form_widget(form.title, {'attr': {'placeholder': 'Ex: Machine à coudre Singer'}}) }}
    {{ form_errors(form.title) }}
</div>

<div class="form-group">
    {{ form_label(form.subtitle, 'Sous-titre*') }}
    {{ form_widget(form.subtitle) }}
    {{ form_errors(form.subtitle) }}
</div>

<div class="form-group">
    {{ form_label(form.price, 'Prix (€)*') }}
    {{ form_widget(form.price, {'attr': {'step': '0.01'}}) }}
    {{ form_errors(form.price) }}
</div>

<div class="form-group">
    {{ form_label(form.subcategory, 'Sous-catégorie*') }}
    {{ form_widget(form.subcategory) }}
    {{ form_errors(form.subcategory) }}
</div>

<div class="form-group">
    {{ form_label(form['fichier-image'], 'Image de l\'objet*') }}
    {{ form_widget(form['fichier-image']) }}
    {{ form_errors(form['fichier-image']) }}
</div>

<div class="form-group">
    {{ form_label(form.description, 'Description*') }}
    {{ form_widget(form.description, {'attr': {'rows': 6}}) }}
    {{ form_errors(form.description) }}
</div>

<div class="form-group">
    {{ form_label(form.author, 'Auteur*') }}
    {{ form_widget(form.author) }}
    {{ form_errors(form.author) }}
</div>

<div class="form-footer">
    <p class="required-fields">* Champs obligatoires</p>
    <button type="submit" class="btn primary-button">{{ button_label|default('Enregistrer') }}</button>
</div>

{{ form_end(form) }}
